# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# Environment: development, staging, production
APP_ENV=development

# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=loginveerles
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application Settings
APP_BASE_URL=http://localhost/loginveerles/apps/auth
COOKIE_SECURE=false
COOKIE_NAME=appsess
COOKIE_SAMESITE=Lax
COOKIE_PATH=/
SESSION_LIFETIME_MINUTES=30
REMEMBER_DAYS=30

# Email Configuration
MAIL_FROM=no-reply@example.com

# SMTP Settings (leave SMTP_HOST empty to use PHP mail() function)
SMTP_HOST=
SMTP_PORT=465
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SECURE=ssl
SMTP_TIMEOUT=30
